extends layout

block content
    h1 #{title}
    br
    ul.list-group
        each product in products
            li.list-group-item
                div.row
                    div.col-md-4
                        img(src='/image/'+product.image)
                    div.col-md-6                   
                        h3 #{product.name}
                        p #{product.short_description}                       
                        br
                        p price: $ #{product.price}
                        br
                        a(class='btn btn-default' ,href='/product/detail/'+product.name) More info
