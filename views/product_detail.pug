extends layout

block content
    h1 #{title}
    div.row
        div.col-md-4
            img(src='/image/'+product.image)
            br
            br
        div.col-md-6
            h3 #{product.name}
            p #{product.long_description}
            p Price: $#{product.price}
            p 
                small Price is one product

            form
                #form-group
                    input.form-control.bfh-number(name='amount' type="number" min="1" max="15" value="1")                            
            br             
            a.btn.btn-primary.add-chart(href='#',data-id=product._id) Buy Now
    div.row
        each image in images
            div.col-md-1       
                img(src='/image/'+image)          
